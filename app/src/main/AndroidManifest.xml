<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studentmanagersystem"
    android:versionCode="1"
    android:versionName="1.0">

    <!-- 读写磁盘的权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />



    <application
        android:allowBackup="true"
        android:icon="@drawable/studentm"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        >
         <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:name=".Register"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:name=".CheckPermissionsActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddStudentActivity"
            android:label="添加"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".AddScoreActivity"
            android:label="添加"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ScoreActivity"
            android:label="添加"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".BackupActivity"
            android:label="添加"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name=".SearchStudentActivity"
            android:label="搜索"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".StudentInformationActivity"
            android:label="信息"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>