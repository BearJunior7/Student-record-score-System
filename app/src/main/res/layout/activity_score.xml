<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="11dp"
    android:orientation="vertical"
    android:background="@mipmap/b1">

    <ListView
        android:id="@+id/course_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tscore"
        >
    </ListView>


    <LinearLayout
        android:id="@+id/tscore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点名总分"
                android:textColor="@color/black"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/dmzf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="122dp"
                android:text="113"

                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">






            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平时作业总分"
                android:textColor="@color/black"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/pszyzf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="122dp"
                android:text="113"

                />


        </RelativeLayout>
        <RelativeLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上机总分"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/sjzf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginLeft="122dp"
            android:text="113"

            />


    </RelativeLayout>
        <RelativeLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总分"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/zf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginLeft="122dp"
            android:text="113"

            />


    </RelativeLayout>
    </LinearLayout>


</RelativeLayout>